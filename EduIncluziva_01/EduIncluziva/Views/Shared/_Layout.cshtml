        <div id="header">
            <div id="title">
                <img src="../../Pictures/altele/logo.jpg" alt="picture missing"/>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartialCont")
            </div>
            <div id="menucontainer">
                <ul id="menu">
                    <li>@Html.ActionLink("Pagina Principala", "Index", "Home")</li>                    
                    <li>@Html.ActionLink("Despre", "About", "Home")</li>
                    <li>@Html.ActionLink("Pagina Profesorilor","Profesori","Profesori")</li>
                    <li> <a href="http://www.isjcj.ro">Inspectoratul Scoalar Cluj</a></li>
                    <li>@Html.ActionLink("Contact","Contact","Home")</li>
                </ul>
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>
