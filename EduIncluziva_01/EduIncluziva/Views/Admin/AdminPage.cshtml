@model EduIncluziva.Models.SearchedUserModel
@{
    Layout = null;
    ViewBag.Title = "AdminPage";    
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div>
    <table>
        <tr>
            <td>
                @using (Html.BeginForm("AdminPage", "Admin"))
                { 
                    @Html.ValidationSummary(true, "Oooups! Va rugam corectati erorile si apoi reincercati.")
                    <div>
                        <fieldset>
                            <legend>Operatii</legend>
                            <table>
                                <tr>
                                    <td>
                                        <div class="editor-label">
                                            @Html.LabelFor(m => m.Mail):
                                        </div>
                                        <div class="editor-field">
                                            @Html.TextBoxFor(m => m.Mail)
                                            @Html.ValidationMessageFor(m => m.Mail)
                                        </div>
                                    </td>
                                    <p>
                                        <input type="submit" value="Cauta" />
                                    </p>
                                </tr>
                            </table>
                        </fieldset>
                    </div>
                }
            </td>
            <td>
                @Html.ActionLink("Informatii licee","InformatiiLicee")
            </td>
            <td>
                @Html.ActionLink("Adauga un utilizator nou", "AdaugaUtilizatorNou")
            </td>
            <td>
                @Html.ActionLink("Cereri de inregistrare", "CereriInregistrare")
            </td>
        </tr>
    </table>
</div>
