@using EduIncluziva.Metrics
@model EduIncluziva.Models.ElevRegisterModel
@{
    ViewBag.Title = "Inregistrare";
    var resourcesRepository = new ResourcesRepository();
    var listaLicee = resourcesRepository.GetAllHighSchools();
    var listaLiceeNume = from nume in listaLicee
                         select nume.Nume;
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm("RegisterElevi", "Cont"))
{ 
    @Html.ValidationSummary(true, "Oooups! Va rugam corectati erorile si apoi reincercati.")
    <div>
        <fieldset>
            <legend>Informatii despre cont</legend>
            <table border="0">
                <tr>
                    <td>
                        <div class="editor-label">
                            @Html.LabelFor(m => m.Nume)
                        </div>
                        <div class="editor-field">
                            @Html.TextBoxFor(m => m.Nume)
                            @Html.ValidationMessageFor(m => m.Nume)
                        </div>
                        <div class="editor-label">
                            @Html.LabelFor(m => m.Prenume)
                        </div>
                        <div class="editor-field">
                            @Html.TextBoxFor(m => m.Prenume)
                            @Html.ValidationMessageFor(m => m.Prenume)
                        </div>
                        <div class="editor-label">
                            @Html.LabelFor(m => m.ScoalaDeProvenienta)
                        </div>
                        <div class="editor-field" style="width: 172px;">
                            @Html.DropDownListFor(m => m.ScoalaDeProvenienta, new SelectList(listaLiceeNume))
                        </div>
                        <div class="editor-label">
                            @Html.LabelFor(m => m.Mail)
                        </div>
                        <div class="editor-field">
                            @Html.TextBoxFor(m => m.Mail)
                            @Html.ValidationMessageFor(m => m.Mail)
                        </div>
                        <div class="editor-label">
                            @Html.LabelFor(m => m.Parola)
                        </div>
                        <div class="editor-field">
                            @Html.PasswordFor(m => m.Parola)
                            @Html.ValidationMessageFor(m => m.Parola)
                        </div>
                        <div class="editor-label">
                            @Html.LabelFor(m => m.ConfirmareParola)
                        </div>
                        <div class="editor-field">
                            @Html.PasswordFor(m => m.ConfirmareParola)
                            @Html.ValidationMessageFor(m => m.ConfirmareParola)
                        </div>
                        <p>
                            <input type="submit" value="Inregistrare" />
                        </p>
                    </td>
                    <td>
                        <p>
                            <img src="../../Pictures/altele/students.png" alt="Students" height="480" width="290" />
                        </p>
                    </td>
                </tr>
            </table>

        </fieldset>
    </div>
    
}