@model EduIncluziva.Models.User
@{
    ViewBag.Title = "ContulMeu";

    EduIncluziva.Metrics.ResourcesRepository rr = new EduIncluziva.Metrics.ResourcesRepository();
    EduIncluziva.Models.Elevi elev = null;
    EduIncluziva.Models.Profesori profesor = null;
    // 0 pt elev 
    // 1 pt profesor
    // 2 pt administrator
    int typeOfUser = 0;

    if (Model.Role.Equals("Elev"))
    {
        elev = rr.GetEleviByID(Model.User_ID);
        typeOfUser = 0;
    }

    if (Model.Role.Equals("Profesor"))
    {
        profesor = rr.GetProfesorByID(Model.User_ID);
        typeOfUser = 1;
    }
    
}
<div>
    <fieldset>
        <legend>Informatii despre contul meu</legend>
        <table border="0">
            <tr>
                <td>
                    @if (typeOfUser == 0)
                    {
                        //adica pt elev
                        <div class="editor-label">
                            @Html.LabelFor(m => elev.Nume) : @elev.Nume
                        </div>
                        <div class="editor-label">
                            @Html.LabelFor(m => elev.Prenume) : @elev.Prenume
                        </div>
                        <div class="editor-label">
                            @Html.LabelFor(m => elev.Mail) : @elev.Mail
                        </div>
                    }
                    @if (typeOfUser == 1)
                    {
                        //adica pt profesor
                        //Html.Partial("~/Views/Profesori/PaginaProfesorului.cshtml");
                    }
                </td>
            </tr>
        </table>
    </fieldset>
</div>
