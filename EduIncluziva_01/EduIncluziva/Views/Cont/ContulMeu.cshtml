@model EduIncluziva.Models.User
@{
    ViewBag.Title = "ContulMeu";

    EduIncluziva.Models.Student student = null;
    EduIncluziva.Models.Teacher teacher = null;
    // 0 pt elev 
    // 1 pt profesor
    // 2 pt administrator
    int typeOfUser = 0;    
}
<div>
    <fieldset>
        @if (Model.Role.Equals("Admin"))
        {
            Html.RenderAction("AdminPage", "Admin");
        }
        else
        {
            <legend>Informatii despre contul meu</legend>
            <table border="0">
                <tr>
                    <td>
                        @if (Model.Role.Equals("Elev"))
                        {
                            //adica pt elev
                            student = (EduIncluziva.Models.Student)Model;
                            <div class="editor-label">
                                @Html.LabelFor(m => student.Nume) : @student.Nume
                            </div>
                            <div class="editor-label">
                                @Html.LabelFor(m => student.Prenume) : @student.Prenume
                            </div>
                            <div class="editor-label">
                                @Html.LabelFor(m => student.Mail) : @student.Mail
                            </div>
                        }
                        @if (Model.Role.Equals("Profesor"))
                        {
                            Html.RenderAction("PaginaProfesorului","Profesori");
                        }
                    </td>
                </tr>
            </table>
        }
    </fieldset>
</div>
